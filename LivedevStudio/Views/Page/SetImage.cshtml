@using System.Data
@model DataSet


@{
    var L = ViewBag.ImageList;
    var tableId = ViewBag.tableId;
}

<form action="" method="post" id="Image">
    <input type="hidden" id="imagehf" name="imagehf" value="" />
    <input type="hidden" id="tableid" name="tableid" value="@tableId" />
    <table style="width:70%; font-size:12px; color:black;border:0px solid #CCD5F0 ; background-color:white; " border="1" id="set-image">
        <tr style="background-color:#003366; color:white;height:28px;">
            <th style="text-align:center;">ID</th>
            <th style="text-align:center;">Field Caption</th>
            <th style="text-align:center;">Form Height</th>
            <th style="text-align:center;">Form Width</th>
            <th style="text-align:center;">Grid Height</th>
            <th style="text-align:center;">Grid Width</th>

        </tr>
        @{
            int x = 0;
            var img = ViewBag.ImageList;
        }

        @foreach (DataRow im in img.Tables[0].Rows)
        {

            <tr>
                <td style="width:70px;padding-left:5px;"><input type="text" style="border:0px none; outline:none; width:100%;" name="columnid[@x]" value="@im["ColumnId"]" readonly /></td>
                <td style="width:200px;padding-left:5px;"><input type="text" style="border:0px none; outline:none; width:100%;" name="columndisplayname[@x]" value="@im["ColumnDisplayName"]" readonly /></td>
                <td style="width:80px;"><input type="text" style="text-align:center; border:0px none; outline:none; width:100%;" name="formheight[@x]" value="@im["ImgFormHeight"]" /></td>
                <td style="width:80px;"><input type="text" style="text-align: center; border: 0px none; outline: none; width: 100%;" name="FormWidth[@x]" value="@im["ImgFormWidth"]" /></td>
                <td style="width:80px;"><input type="text" style="text-align: center; border: 0px none; outline: none; width: 100%;" name="gridheight[@x]" value="@im["ImgGridHeight"]" /></td>
                <td style="width:80px;"><input type="text" style="text-align: center; border: 0px none; outline: none; width: 100%;" name="gridwidth[@x]" value="@im["ImgGridWidth"]" /></td>


            </tr>

            x = x + 1;
        }


    </table>

</form>

<script>
    $('#set-image td').click(function () {
        $('#set-image tr').css({ "background-color": "white", "color": "black" });
        $('#set-image th').css({ "background-color": "#003366", "color": "white" });
        $(this).parent().css({ "background-color": "#0066ff", "color": "white" });
        //$(this).parent().css("background-color", "green");
    });

</script>
