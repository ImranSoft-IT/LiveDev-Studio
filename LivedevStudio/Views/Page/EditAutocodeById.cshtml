

@using System.Data
@model DataSet
@{
    var auto = ViewBag.EditAutocode;
}




<form method="post" action="" id="UpdateAuto">
    @*<input type="hidden" name="hfpkid_@formelement[0].formid" id="hfpkid_@formelement[0].formid" value="0" />
        <input type="hidden" name="hffkid_@formelement[0].formid" id="hffkid_@formelement[0].formid" value="0" />*@
    <input type="hidden" name="hfpkid" id="hfpkid" value="0" />
    <input type="hidden" name="hffkid" id="hffkid" value="0" />

    <input type="hidden" name="entry_user_id" id="entry_user_id" value="1" />
    <input type="hidden" name="entry_by" id="entry_by" value="Shabuj" />
    <input type="hidden" name="entry_date" id="entry_date" value="Getdate()" />
    <input type="hidden" name="update_by" id="update_by" value="Shabuj" />
    <input type="hidden" name="update_date" id="update_date" value="Getdate()" />

    <input type="hidden" name="is_approved" id="is_approved" value="0" />
    <input type="hidden" name="is_deleted" id="is_deleted" value="0" />
    <input type="hidden" name="is_cancel" id="is_cancel" value="0" />
    <input type="hidden" name="work_follow_position" id="work_follow_position" value="1" />
    <input type="hidden" name="TableIds" value="9" />
    @*<input type="hidden" name="moduleid" value="@ViewBag.ModuleId" id="mid" />*@
    <input type="hidden" name="tableid" value="@ViewBag.TableId" id="tid" />

    <table class="ml-0 pl-0" style="width:99%;background-color:white; border:1px  solid #CCD5F0;  font-size:13px; color: black;" border="1">
        @foreach (DataRow a in auto.Tables[0].Rows)
        {
            <tr>
                <td>Property Id<a style="color:white;background-color:black;" href="#" title="That&apos;s what this widget is what this widget.."><span style="float:right; font-size:16px;padding-right:5px; color:black;"> <i class="fa fa-info-circle" aria-hidden="true"></i></span></a> </td>
                <td> <input type="text" name="propertyid" value="@a["PropertyId"]" class="border-0" style="width:100%;outline:none;" readonly /></td>
            </tr>
            <tr>
                <td>Format Type	<a style="color:white;background-color:black;" href="#" title="That&apos;s what this widget "><span style="float:right; font-size:16px;padding-right:5px; color:black;"> <i class="fa fa-info-circle" aria-hidden="true"></i></span></a></td>
                <td>

                    <input type="hidden" name="name" value="@a["FormatType"]" id="ftype" />
                    <select name="formattype" style="width:100%;outline:none;border:0px none;" id="autoformattype">
                        <option value="">Select Format Type</option>
                        <option value="year">Year (Formate must be 2 or 4)</option>
                        <option value="month">Month (Formate must be 2 or 3)</option>
                        <option value="sequence">Sequence (Formate must be within 1 to 9)</option>
                        <option value="expression">Expression (Expression  must be Database SQL)</option>
                        <option value="constant">Constant (Formate may be any character or number)</option>
                        <option value="identity">Identity Increment ( Column value must be numeric )</option>


                    </select>
                </td>

            </tr>

            <tr>
                <td>Format Value<a style="color:white;background-color:black;" href="#" title="That&apos;s what this widget is what this widget.."><span style="float:right; font-size:16px;padding-right:5px; color:black;"> <i class="fa fa-info-circle" aria-hidden="true"></i></span></a> </td>
                <td> <input type="text" name="format" value="@a["Format"]" class="border-0" style="width:100%; outline:none;" /></td>
            </tr>
            <tr>
                <td>Expression <a style="color:white;background-color:black;" href="#" title="That&apos;s what this widget is what this widget i what this widget iwhat this widget i"><span style="float:right; font-size:16px;padding-right:5px; color:black;"> <i class="fa fa-info-circle" aria-hidden="true"></i></span></a></td>
                @*<td> <input type="text" name="expression" value="@a["Expression"]" class="border-0" style="width:100%; outline:none;" /></td>*@
                <td><textarea name="expression" rows="2" cols="33" class="border-0" style="width:100%;outline:none;">@a["Expression"]</textarea></td>
            </tr>
            <tr>
                <td>Sl <a style="color:white;background-color:black;" href="#" title="That&apos;s what this widget is what this widget i what this widget iwhat this widget i"><span style="float:right; font-size:16px;padding-right:5px; color:black;"> <i class="fa fa-info-circle" aria-hidden="true"></i></span></a></td>
                <td> <input type="text" name="slno" value="@a["SlNo"]" class="border-0" style="width:100%; outline:none;" /></td>

            </tr>
            <tr>
                <td>Active <a style="color:white;background-color:black;" href="#" title="That&apos;s what this widget is what this widget i what this widget iwhat this widget i"><span style="float:right; font-size:16px;padding-right:5px; color:black;"> <i class="fa fa-info-circle" aria-hidden="true"></i></span></a></td>
                @if (Convert.ToBoolean(a["IsActive"]))
                {
                    <td> <input type="checkbox" name="isactive" value="1" class="border-0" style="width: 100%;" checked /></td>

                }
                else
                {
                    <td> <input type="checkbox" name="isactive" value="0" class="border-0" style="width: 100%;" /></td>
                }


            </tr>

        }


    </table>
</form>

<script>

    $(document).ready(function () {
        var f = $('#ftype').val();
        $('#autoformattype option[value=' + f + ']').attr("selected", "selected");
       
    });

</script>