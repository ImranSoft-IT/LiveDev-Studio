@*<div class="ml-0  " style="width:671px; background-color:#CCD5F0"><a class="ml-1 font-weight-bold text-dark" href="#" onclick="EditSubModuleIcon()"><i id="EditSubModuleIcon" class="fa fa-caret-down" aria-hidden="true"></i> Edit Sub Module</a> </div>*@
<div class="ml-0 mt-2 text-dark mt-2" style="width:710px; background-color:#CCD5F0;"><a class="ml-1 font-weight-bold " href="#">Edit Sub Module</a> </div>
<div class=" mt-0" id="EditSm">

    <form method="post" action="" id="ESM">
        <input type="hidden" name="TableIds" value="7" />


        <input type="hidden" name="update_by" id="update_by" value="Shabuj" />
        <input type="hidden" name="update_date" id="update_date" value="Getdate()" />

        <input type="hidden" name="is_approved" id="is_approved" value="0" />
        <input type="hidden" name="is_deleted" id="is_deleted" value="0" />
        <input type="hidden" name="is_cancel" id="is_cancel" value="0" />
        <input type="hidden" name="work_follow_position" id="work_follow_position" value="1" />

        <table style="width:98%;background-color:white; border:1px  solid #CCD5F0;  font-size:13px; color: black;" border="1" id="SM">
            @{
                var s1 = ViewBag.EditModule;

                var m1 = ViewBag.Module;
                var aid = ViewBag.Aid;

            }

            @foreach (DataRow ss in s1.Tables[0].Rows)
            {

            <tr>
                <td>Category Id <a style="color:white;background-color:black;" href="#" title="That&apos;s what this widget "><span style="float:right; font-size:16px;padding-right:5px; color:black;"> <i class="fa fa-info-circle" aria-hidden="true"></i></span></a></td>

                <td>
                    @*@ss["CategoryId"]*@
                    <input type="hidden" name="categoryid" value="@ss["CategoryId"]" id="categoryid" readonly />

                </td>
            </tr>
                <tr>
                    <td>Module <a style="color:white;background-color:black;" href="#" title="That&apos;s what this widget "><span style="float:right; font-size:16px;padding-right:5px; color:black;"> <i class="fa fa-info-circle" aria-hidden="true"></i></span></a></td>

                    <td>
                        <input type="hidden" name="name" value=@aid id="appid" />
                        <select style="width:100%; " name="applicationid" id="applicationid">


                            @foreach (DataRow mod in m1.Tables[0].Rows)
                            {
                                <option value="@mod["DatabaseId"]"> @mod["ModuleAlis"] </option>
                            }

                        </select>
                    </td>
                </tr>
                <tr>
                    <td>Sub Module<a style="color:white;background-color:black;" href="#" title="That&apos;s what this widget is what this widget.."><span style="float:right; font-size:16px;padding-right:5px; color:black;"> <i class="fa fa-info-circle" aria-hidden="true"></i></span></a> </td>
                    <td> <input type="text" name="modulecategory" value="@ss["ModuleCategory"]" class="border-0" style="width:100%; " /></td>
                </tr>
                <tr>
                    <td>System <a style="color:white;background-color:black;" href="#" title="That&apos;s what this widget is what this widget i what this widget iwhat this widget i"><span style="float:right; font-size:16px;padding-right:5px; color:black;"> <i class="fa fa-info-circle" aria-hidden="true"></i></span></a></td>
                    <td>
                        @{


                            var system = Convert.ToBoolean(ss["IsSystem"]);
                        }
                        @if (system)
                        {
                            <input type="checkbox" name="issystem" id="system" class="border-0" value="1" checked />
                        }
                        else
                        {
                            <input type="checkbox" name="issystem" id="system" class="border-0" value="1" />
                        }
                        @*<input type="radio" name="issystem" class="border-0" value="0" /> No*@
                        @*@Html.CheckBox("issystem")*@
                    </td>

                </tr>
                <tr>
                    <td>SL No. <a style="color:white;background-color:black;" href="#" title="hello .. THis is an checkbox feild ."><span style="float:right; font-size:16px;padding-right:5px; color:black;"> <i class="fa fa-info-circle" aria-hidden="true"></i></span></a></td>
                    <td class="ml-2"> <input type="text" name="sl" value="@ss["Sl"]" class="border-0" style="outline:none; width:100%" readonly /></td>
                </tr>

            }

        </table>
        <div class="row">
            <div class="col-sm-2">

                <a href="#" class="btn btn-sm  mt-1 font-weight-bold " style="width:100%; background-color:#CCD5F0; color:black;" onclick="UpdateSubmodule('ESM')">Update</a>
                @* <input type="submit" value="Save" class="btn btn-sm  mt-1 font-weight-bold " style="width:100%; background-color:#CCD5F0; color:black;" />*@
            </div>

        </div>

    </form>


</div>


<script>


    $(document).ready(function () {
        var sid = $('#appid').val();
        
        //$('#applicationid option:eq(' + sid + ')').prop('selected', true);

        $('#applicationid option[value=' + sid +']').attr("selected", "selected");

    });
   

    function EditSubModuleIcon() {



        if ($('#EditSubModuleIcon').hasClass("fa fa-caret-down")) {
            $('#EditSubModuleIcon').removeClass("fa fa-caret-down").addClass("fa fa-caret-right").ready(function () {
                $('#EditSm').hide();
            });
        }
        else {
            $('#EditSubModuleIcon').removeClass("fa fa-caret-right").addClass("fa fa-caret-down").ready(function () {
                $('#EditSm').show();
            });
        }
    }
</script>











